PORT=3000
NODE_ENV=development
CORS_ORIGIN=*
DATABASE_URL="postgresql://username:password@localhost:5432/alphabit?schema=public"
NEYNAR_API_KEY=your-neynar-api-key

# ---------------------------
# Farcaster Authentication
# ---------------------------
# DOMAIN must match your mini-app's configured domain in Farcaster Developer Console
# This is required for JWT token verification
DOMAIN=example.com

# ---------------------------
# Thetanuts Integration
# ---------------------------
# Unique wallet address for Alphabit platform (used for tracking trades and referral fees)
ALPHABIT_REFERRER_ADDRESS=0x0000000000000000000000000000000000000000
# Thetanuts Indexer API base URL
THETANUTS_INDEXER_URL=https://optionbook-indexer.thetanuts.finance/api/v1
# Thetanuts Orders API URL
THETANUTS_ORDERS_URL=https://round-snowflake-9c31.devops-118.workers.dev/

# ---------------------------
# Sync Scheduler
# ---------------------------
# Enable background sync (true/false)
SYNC_SCHEDULER_ENABLED=false
# Sync interval in milliseconds (default: 900000 = 15 mins)
SYNC_INTERVAL_MS=900000
# Delay after triggering indexer update before syncing (ms)
SYNC_DELAY_AFTER_UPDATE=10000

# ---------------------------
# Admin Sync Token
# ---------------------------
# Secret token for /api/nuts/trades/sync-all (admin-only endpoint)
ADMIN_SYNC_TOKEN=change-me
